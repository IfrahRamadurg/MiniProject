pipeline {
    agent any

    environment {
        DOCKER_IMAGE_NAME = 'miniproject'
        GITHUB_REPO_URL = 'https://github.com/IfrahRamadurg/MiniProject.git'
    }

    stages {
        stage('Clone Git') {
            steps {
                script {
                    // Checkout the code from the GitHub repository
                    git branch: 'main', url: "${GITHUB_REPO_URL}"
                }
            }
        }
        stage('Build Code') {
            steps {
                sh "chmod u+x ScientificCalculator.py"
                sh "python3 ./ScientificCalculator.py"
            }
        }
     stage('Test Code') {
            steps {
                sh "chmod u+x TestScientificCalculator.py"
                sh "python3 ./TestScientificCalculator.py"
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build Docker image
                    docker.build("${DOCKER_IMAGE_NAME}", '.')
                }
            }
        }

        stage('Push Docker Images') {
            steps {
                script{
                    docker.withRegistry('', 'DockerHubCred') {
                    sh 'docker tag miniproject halwaikeladdoo/miniproject:latest'
                    sh 'docker push halwaikeladdoo/miniproject'
                    }
                 }
            }
        }

   stage('Run Ansible Playbook') {
            steps {
                script {
                    ansiblePlaybook(
                        playbook: 'deploy.yml',
                        inventory: 'inventory'
                     )
                }
            }
        }

    }
}
